<script>
function add(){
var a,b,c;
a=Number(document.getElementById("weight").value);
b=Number(document.getElementById("time").value);
c=Number(document.getElementById("spares").value);
if (a < 10) {weight = "Not suitable";}
else if (a < 20) {weight = '1';}
else if (a < 30) {weight = '2';)
else (a < 30 ) {weight = '3';}
d=Math.ceil(b+30)*a-c;
document.getElementById("answer").value=d
;
}
</script>
